{
  "name": "eosjs",
  "version": "20.0.0-beta3",
  "description": "Talk to eos API",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "npm run build",
    "test": "jest",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "lint-fix": "tslint -c tslint.json src/**/*.ts --fix",
    "build": "tsc -p ./tsconfig.json && cp src/ripemd.es5.js dist/ripemd.js",
    "build-web": "webpack --config webpack.prod.js && webpack --config webpack.debug.js",
    "clean": "rm -rf dist",
    "docs-init": "sh .docs/scripts/init.sh",
    "docs-build": "sh .docs/scripts/build.sh",
    "docs-serve": "python -m SimpleHTTPServer",
    "docs-publish": "sh .docs/scripts/publish.sh"
  },
  "author": "block.one",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EOSIO/eosjs.git"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "eosjs-ecc": "^4.0.1",
    "text-encoding": "^0.6.4"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^10.3.1",
    "@types/text-encoding": "^0.0.35",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-1": "^6.24.1",
    "jest": "^23.5.0",
    "jest-fetch-mock": "^1.6.5",
    "json-loader": "^0.5.7",
    "ts-jest": "^23.1.4",
    "ts-loader": "^4.3.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^2.9.1",
    "webpack": "^4.11.0",
    "webpack-cli": "^3.0.2"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./src/tests/setupJest.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(tsx?)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "testRegex": "(/src/.*(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testEnvironment": "node"
  }
}
