{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "dist",
    "alwaysStrict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "lib": ["es2018", "dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.js"]
}
